<!doctype html>
<html>
    <head>
        <meta charset="utf8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Edit Deck</title>
        <link href="{{ url_for('static', filename='bootstrap-5.3.3/css/bootstrap.css') }}" rel="stylesheet" />
    </head>
    <body>
        <form action="{{ url_for('save_deck', id=deck.id) }}" method="POST">
            <div class="container">
                <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
                    <ul class="nav col-12 col-lg-auto mb-2 justify-content-center mb-md-0">
                        <li>    
                            <a class="nav-link px-2 link-secondary" href="{{ url_for("decks") }}">Decks</a>
                        </li>
                        <li>
                            <a class="nav-link px-2 link-secondary" href="{{ url_for('deck', id=deck.id) }}">Back</a>
                        </li>
                    </ul>
                    <div class="col-lg-3 text-end">
                        <button class="btn btn-primary">Save</button>
                    </div>
                </header>
                <div class="container">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" name="name" class="form-control" value="{{ deck.name}}" />
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" name="description" rows="3">{{ deck.description }}</textarea>
                    <label for="cards" class="form-label">Cards</label>
                    <textarea class="form-control" name="cards" rows="20">{% for card in deck.cards %}{{card.quantity}} {{card.name}} ({{card.set_code}}) {{card.collector_number}}&#013;{% endfor %}</textarea>
                </div>
            </div>
        </form>
    </body>
</html>